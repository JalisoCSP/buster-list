<p id="notice"><%= notice %></p>

<h1>Life Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @life_items.each do |life_item| %>
      <tr>
        <td><%= life_item.title %></td>
        <td><%= life_item.date %></td>
        <td><%= link_to 'Show', life_item %></td>
        <td><%= link_to 'Edit', edit_life_item_path(life_item) %></td>
        <td><%= link_to 'Destroy', life_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

